# CleanTrack Environment Variables
# Copy this file to .env and update the values

# Database connection string (use strong credentials in production)
# For Docker: point host to service name 'db'; for local: localhost
DATABASE_URL=postgresql://cleantrack_user:change_me@db:5432/cleantrack
POSTGRES_USER=cleantrack_user
POSTGRES_DB=cleantrack
# POSTGRES_PASSWORD is only for local/dev fallback. In Docker compose, use secrets file instead.
# POSTGRES_PASSWORD=change_me
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-super-secret-key-change-this-in-production
NODE_ENV=development
NEXT_TELEMETRY_DISABLED=1 
CRON_SECRET=change-me-in-production
CORS_ALLOWED_ORIGIN=http://localhost:3000
NEXT_PUBLIC_APP_BASE_URL=http://localhost:3000